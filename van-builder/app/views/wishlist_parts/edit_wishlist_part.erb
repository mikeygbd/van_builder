<header>
  <div id="navbar" class="light-fade">
    <div class="wrapper">

      <div id="account">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="/img/user.png" width=30 alt="user"></a>
        <ul class="dropdown-menu">
            <li><a href="/logout">Logout</a></li>
