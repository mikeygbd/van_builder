<body>
    <h1><strong>My Blog</strong><a href="#postModal" id ="add-button" role="button" data-toggle="modal"><span class="badge">Add Post</span></a></h1>
    <div class="posts">

<% current_user.posts.each do |post| %>

<form class="post shadow">
  <div id="contact">
    <h2><strong><%= post.title %></strong> </h2><br><br>
    <%= post.embed %><br>
    <div class="description">
    <h4><%= post.description %></h4>
    </div>
    <br>
    <a href="/posts/<%= post.id %>/edit">Edit</a>
    &nbsp; | &nbsp;
    <a href="/posts/<%= post.id %>/delete">Delete</a>
  </div>
</form>
<% end %>
  </div>


  <div id="postModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  			Add Post
        </div>
        <div class="modal-body">
            <form action="/posts/new" method=POST class="form center-block" autocomplete="on">
              <div class="form-group">
                <textarea class="form-control input-lg" name = "title" autofocus="" placeholder="Title" required></textarea>
                <textarea class="form-control input-lg" name = "embed" autofocus="" placeholder="Video Embed"></textarea>
                <!-- <textarea class="form-control input-lg" name = "video_link" autofocus="" placeholder="Video Link"></textarea> -->
                <textarea class="form-control input-lg" name = "description" rows="8" cols="80" autofocus="" placeholder="Description" required></textarea>
              </div>
              <input class="btn btn-primary btn-sm" type="submit" value="Submit" id="submit">
            </form>
        </div>
        </div>
    </div>
    </div>

</body>

